#!/usr/bin/env bash
if [ $@ ]; then
  composer self-update && composer create-project --prefer-dist cakephp/app:~4.0 $1
  cd $1
else
  composer self-update && composer create-project --prefer-dist cakephp/app:~4.0 .
fi
composer require cakephp/cakephp:^3.6
echo "
